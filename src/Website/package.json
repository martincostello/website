{
  "name": "martincostellocom",
  "private": true,
  "type": "module",
  "version": "3.0.0",
  "description": "Martin Costello's website",
  "scripts": {
    "build": "npm run compile && npm run format && npm run lint",
    "compile": "webpack",
    "format": "prettier --write assets/**/*.ts && stylelint --fix assets/*/*.css",
    "format-check": "prettier --check assets/**/*.ts && stylelint assets/*/*.css",
    "lint": "eslint assets",
    "test": "jest",
    "watch": "webpack --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/martincostello/website.git"
  },
  "author": "martincostello",
  "license": "Apache-2.0",
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@stylistic/eslint-plugin": "^2.10.1",
    "@typescript-eslint/eslint-plugin": "^8.12.2",
    "@typescript-eslint/parser": "^8.12.2",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.0",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.8.3",
    "globals": "^15.11.0",
    "jest": "^29.7.0",
    "mini-css-extract-plugin": "^2.9.2",
    "moment": "^2.30.1",
    "prettier": "^3.3.3",
    "style-loader": "^4.0.0",
    "stylelint": "^16.10.0",
    "stylelint-config-standard": "^36.0.1",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "tsify": "^5.0.4",
    "typescript": "^5.6.3",
    "webpack": "^5.96.1",
    "webpack-cli": "^5.1.4",
    "webpack-remove-empty-scripts": "^1.0.4"
  },
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "scripts/**/*.ts"
    ],
    "reporters": [
      "default",
      "github-actions"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "verbose": true
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "endOfLine": "auto",
    "printWidth": 80,
    "quoteProps": "consistent",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "es5",
    "useTabs": false
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard"
    ]
  }
}
