@inherits RazorSlice<SiteOptions>

<hr />
<footer>
    <p>
        &copy; @(Model.Metadata?.Author?.Name) @(DateTimeOffset.UtcNow.Year) |
        Built from
        <a id="link-git-commit" href="@(Model.Metadata?.Repository)/commit/@(GitMetadata.Commit)" title="View commit @(GitMetadata.Commit) on GitHub">
            @(string.Join(string.Empty, GitMetadata.Commit.Take(7)))
        </a>
        on
        <a id="link-git-branch" href="@(Model.Metadata?.Repository)/tree/@(GitMetadata.Branch)" title="View branch @(GitMetadata.Branch) on GitHub">
            @(GitMetadata.Branch)
        </a>
        by
        <a href="@(Model.Metadata?.Repository)/actions/runs/@(GitMetadata.DeployId)" title="View deployment on GitHub">
            GitHub
        </a>
        <span id="build-date" class="d-none d-sm-inline" data-format="YYYY-MM-DD HH:mm Z" data-timestamp="@(GitMetadata.Timestamp.ToString("u", CultureInfo.InvariantCulture))"></span>
    </p>
</footer>
