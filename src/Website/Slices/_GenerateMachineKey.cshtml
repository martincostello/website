<form id="generate-machine-key-container" role="form">
    <fieldset>
        <legend>Machine Key Generator</legend>
        <a name="GenerateMachineKey"></a>
        <div class="row">
            <label class="col-form-label col-lg-2 text-lg-right" for="key-decryption-algorithm">Decryption algorithm?</label>
            <div class="col-lg-7">
                <div class="input-group mb-3">
                    <select id="key-decryption-algorithm" class="form-control form-control-lg" title="The name of the decryption algorithm">
                        <option value="3DES">3DES</option>
                        <option value="AES-128">AES (128 bits)</option>
                        <option value="AES-192">AES (192 bits)</option>
                        <option selected="selected" value="AES-256">AES (256 bits)</option>
                        <option value="DES">DES</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="row">
            <label class="col-form-label col-lg-2 text-lg-right" for="key-validation-algorithm">Validation algorithm?</label>
            <div class="col-lg-7">
                <div class="input-group mb-3">
                    <select id="key-validation-algorithm" class="form-control form-control-lg" title="The name of the validation algorithm">
                        <option value="3DES">3DES</option>
                        <option value="AES">AES</option>
                        <option value="HMACSHA256">HMAC SHA-256</option>
                        <option value="HMACSHA384">HMAC SHA-384</option>
                        <option value="HMACSHA512">HMAC SHA-512</option>
                        <option value="MD5">MD5</option>
                        <option selected="selected" value="SHA1">SHA-1</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <div class="input-group mb-3">
                    <a id="generate-machine-key" class="btn btn-primary" href="#GenerateMachineKey" role="button" rel="nofollow" data-ga-category="tools" data-ga-label="Generate machine key">Generate Machine Key</a>
                </div>
            </div>
        </div>
        <div id="machine-key-container" class="d-none">
            <div class="row">
                <label for="machine-key-xml" class="col-form-label col-lg-2 text-lg-right">Configuration Element</label>
                <div class="col-lg-7">
                    <div class="input-group mb-3">
                        <code id="machine-key-xml" class="code"></code>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8 offset-lg-2">
                    <div class="input-group mb-3">
                        <a id="copy-machine-key" href="#" rel="nofollow" class="btn btn-secondary copy-button" data-clipboard-target="#machine-key-xml" data-ga-category="tools" data-ga-label="Copy machine key" title="Copy to clipboard">
                            Copy to clipboard <i class="far fa-clipboard"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </fieldset>
</form>
