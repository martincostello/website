@implements IUsesLayout<_Layout, LayoutModel>

@{
    var coverImage = "https://cdn.martincostello.com/cover.png";
    var request = HttpContext!.Request;
}
<div class="card bg-dark text-white">
    <noscript>
        <img src="@(coverImage)" class="card-img" aria-hidden="true">
    </noscript>
    <div class="cover-image-wrapper">
        <img class="card-img cover-image lazy" src="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7" data-original="@(coverImage)" aria-hidden="true">
    </div>
    <div class="card-img-overlay">
        <h1 class="card-title">Martin Costello</h1>
        <p class="card-text fw-bold">
            .NET Software Developer &amp; Tester
        </p>
    </div>
</div>
<div class="d-flex mt-1 justify-content-end">
    <a href="@(request.Content("~/github", false))" class="btn btn-primary mx-1" rel="noopener" role="button" target="_blank" title="Martin's GitHub profile">
        <span class="fa-brands fa-github fa-fw" aria-hidden="true"></span>
        <span class="fa-solid fa-arrow-up-right-from-square" aria-hidden="true"></span>
    </a>
    <a href="@(request.Content("~/bsky", false))" class="btn btn-primary mx-1" rel="noopener" role="button" target="_blank" title="Martin's Bluesky profile">
        <span class="fa-brands fa-bluesky fa-fw" aria-hidden="true"></span>
        <span class="fa-solid fa-arrow-up-right-from-square" aria-hidden="true"></span>
    </a>
</div>
<hr/>
<div class="row">
    <div class="col-md-4">
        <h2 class="h3">Projects</h2>
        <p>Information about development projects I manage and/or work on.</p>
        <p>
            <a href="@(request.Content("~/projects", false))" class="btn btn-lg btn-primary" role="button">
               Learn more &raquo;
            </a>
        </p>
    </div>
    <div class="col-md-4">
        <h2 class="h3">Blog</h2>
        <p>I occasionally blog about topics related to .NET development.</p>
        <p>
            <a href="@(request.Content("~/home/blog", false))" class="btn btn-lg btn-primary" rel="noopener" role="button" target="_blank">
               Visit blog &raquo;
            </a>
        </p>
    </div>
    <div class="col-md-4">
        <h2 class="h3">Tools</h2>
        <p>A few simple tools I use regularly to develop .NET applications.</p>
        <p>
            <a href="@(request.Content("~/tools", false))" class="btn btn-lg btn-primary" role="button">
               Visit tools &raquo;
            </a>
        </p>
    </div>
</div>

@functions {
    public LayoutModel LayoutModel { get; } = new("Home Page");
}
