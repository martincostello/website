<form id="generate-guid-container" role="form">
    <fieldset>
        <legend>GUID Generator</legend>
        <a name="GenerateGuid"></a>
        <div class="row">
            <label class="col-form-label col-lg-2" for="text-guid">GUID</label>
            <div class="col-lg-7">
                <div class="input-group mb-3">
                    @Html.TextBox("text-guid", @Guid.NewGuid().ToString(), new { @class = "form-control form-control-lg code", id = "text-guid", label = "The generated GUID", @readonly = string.Empty })
                    <button id="copy-guid" class="btn btn-lg btn-secondary copy-button" data-clipboard-target="#text-guid" data-ga-category="tools" data-ga-label="Copy GUID" title="Copy to clipboard" aria-label="Copy GUID to clipboard">
                        <span class="far fa-clipboard"></span>
                    </button>
                </div>
            </div>
        </div>
        <div class="row">
            <label class="col-form-label col-lg-2 text-lg-right" for="guid-format">Format?</label>
            <div class="col-lg-7">
                <div class="input-group mb-3">
                    <select id="guid-format" class="form-control form-control-lg" title="Select the format to generate a GUID in">
                        <option value="D" selected>Default</option>
                        <option value="N">Numeric</option>
                        <option value="B">With braces</option>
                        <option value="P">With parentheses</option>
                        <option value="X">Hexadecimal with braces</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-7 offset-lg-2">
                <div class="input-group mb-3">
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="guid-uppercase" title="Select to generate with upper case letters">
                        <label class="form-check-label" for="guid-uppercase">Upper case?</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-2 offset-lg-2">
                <div class="input-group mb-3">
                    <a id="generate-guid" class="btn btn-primary" role="button" href="#GenerateGuid" rel="nofollow" title="Generate a new GUID" data-ga-category="tools" data-ga-label="Generate GUID">New GUID</a>
                </div>
            </div>
        </div>
    </fieldset>
</form>
